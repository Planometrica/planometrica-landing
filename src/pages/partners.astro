const pricingPlans = [
  {
    name: 'Стартовый',
    price: '500 000',
    period: '/год',
    description: 'Для небольших компаний',
    features: [
      'До 100 проектов/мес',
      'API доступ',
      'Базовое брендирование',
      'Email поддержка',
      'Документация'
    ],
    recommended: false,
    cta: 'Обсудить'
  },
  {
    name: 'Бизнес',
    price: '1 200 000',
    period: '/год',
    description: 'Для растущих компаний',
    features: [
      'До 1 000 проектов/мес',
      'API + React SDK',
      'Полное брендирование',
      'Выделенный менеджер',
      'SLA 99.9%',
      'Приоритетная поддержка'
    ],
    recommended: true,
    cta: 'Обсудить'
  },
  {
    name: 'Энтерпрайз',
    price: 'По запросу',
    period: '',
    description: 'Для крупных экосистем',
    features: [
      'Безлимитные проекты',
      'Кастомная интеграция',
      'On-premise установка',
      'Выделенная команда',
      'Кастомный SLA',
      'Обучение команды'
    ],
    recommended: false,
    cta: 'Связаться'
  }
]

const steps = [
  { number: 1, title: 'Обсуждение', description: 'Определяем требования и сценарии использования' },
  { number: 2, title: 'Настройка', description: 'Брендирование, настройка API, тестовая среда' },
  { number: 3, title: 'Интеграция', description: 'Подключение к вашей платформе с помощью SDK' },
  { number: 4, title: 'Запуск', description: 'Продакшн-среда, мониторинг, поддержка' }
]

const metrics = [
  { value: '10 000+', label: 'планировок сгенерировано' },
  { value: '2 недели', label: 'на интеграцию' },
  { value: '99.9%', label: 'uptime API' }
]
---

<Layout
  title="White-label проектирование домов — API и SDK для бизнеса"
  description="Встройте AI-проектирование домов в свою платформу. API, SDK, полное брендирование. Для банков, девелоперов, маркетплейсов. От 500 000 ₽/год."
  keywords="white-label проектирование, API проектирование домов, SDK ИЖС, B2B платформа, проектирование для бизнеса"
  ogImage="/images/og-partners.jpg"
  canonical="/partners"
  transparentHeader={true}
>
  <main>
    <!-- СЕКЦИЯ 1: Hero -->
    <section class="relative min-h-[80vh] flex items-center bg-gradient-to-br from-[#1A7BB3] via-[#0A4C76] to-[#083d5f] overflow-hidden">
      <!-- Blur decorations -->
      <div class="absolute top-20 left-10 w-72 h-72 bg-[#1A7BB3]/20 rounded-full blur-3xl"></div>
      <div class="absolute bottom-20 right-10 w-96 h-96 bg-[#0A4C76]/30 rounded-full blur-3xl"></div>
      <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-white/5 rounded-full blur-3xl"></div>

      <div class="container mx-auto px-4 py-32 relative z-10">
        <div class="max-w-4xl mx-auto text-center">
          <!-- Badge -->
          <span class="inline-block px-4 py-2 bg-white/10 backdrop-blur-sm text-white font-medium rounded-full text-sm mb-6 border border-white/20">
            White-label решение
          </span>

          <!-- Title -->
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6 leading-tight">
            Встройте проектирование домов в свою платформу
          </h1>

          <!-- Subtitle -->
          <p class="text-xl md:text-2xl text-white/90 mb-4 font-medium">
            API + SDK + Брендирование · Запуск за 2 недели
          </p>

          <!-- Description -->
          <p class="text-lg text-white/70 mb-8 max-w-3xl mx-auto">
            Предоставьте клиентам полный цикл проектирования ИЖС под вашим брендом. AI-генерация планировок, 3D визуализация, проектная документация — всё через API или готовый интерфейс.
          </p>

          <!-- CTAs -->
          <div class="flex flex-col sm:flex-row gap-4 justify-center mb-12">
            <a
              href="mailto:partners@planometrica.pro"
              class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-[#0A4C76] bg-white rounded-xl hover:bg-gray-100 transition-all duration-200 shadow-lg hover:shadow-xl"
            >
              Обсудить интеграцию
            </a>
            <a
              href="#capabilities"
              class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold bg-white/10 text-white border border-white/30 rounded-xl hover:bg-white/20 transition-all duration-200"
            >
              Скачать презентацию
              <svg class="ml-2 w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
              </svg>
            </a>
          </div>

          <!-- Metrics -->
          <div class="flex flex-col sm:flex-row items-center justify-center gap-8 sm:gap-12">
            {metrics.map((metric) => (
              <div class="text-center">
                <div class="text-3xl md:text-4xl font-bold text-white mb-1">{metric.value}</div>
                <div class="text-sm text-white/60">{metric.label}</div>
              </div>
            ))}
          </div>
        </div>
      </div>

      <!-- Scroll Indicator -->
      <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
        <svg class="w-6 h-6 text-white/60" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
        </svg>
      </div>
    </section>

    <!-- СЕКЦИЯ 2: Для кого -->
    <section class="py-24 bg-white">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <span class="inline-block px-4 py-2 bg-[#0A4C76]/10 text-[#0A4C76] font-medium rounded-full text-sm mb-4">
            Аудитории
          </span>
          <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900">
            Кому подходит White-label
          </h2>
        </div>

        <div class="grid md:grid-cols-3 gap-8 max-w-6xl mx-auto">
          {audiences.map((audience) => (
            <div class="bg-white rounded-2xl p-8 border border-gray-100 hover:shadow-lg transition-all duration-300">
              <div class="text-[#0A4C76] mb-6">
                <Fragment set:html={audience.icon} />
              </div>
              <h3 class="text-xl font-bold text-gray-900 mb-3">{audience.title}</h3>
              <p class="text-gray-600 mb-6">{audience.description}</p>
              <ul class="space-y-2">
                {audience.features.map((feature) => (
                  <li class="flex items-start gap-2 text-sm">
                    <span class="w-1.5 h-1.5 bg-[#0A4C76] rounded-full mt-2 flex-shrink-0"></span>
                    <span class="text-gray-700">{feature}</span>
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- СЕКЦИЯ 3: Что включено -->
    <section id="capabilities" class="py-24 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <span class="inline-block px-4 py-2 bg-[#0A4C76]/10 text-[#0A4C76] font-medium rounded-full text-sm mb-4">
            Возможности платформы
          </span>
          <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900">
            Полный стек проектирования под вашим брендом
          </h2>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-6xl mx-auto">
          {capabilities.map((capability) => (
            <div class="bg-white rounded-2xl p-6 border border-gray-100 hover:shadow-lg hover:border-[#1A7BB3]/30 transition-all duration-300">
              <div class="w-14 h-14 bg-[#0A4C76]/10 rounded-xl flex items-center justify-center text-[#0A4C76] mb-4">
                <Fragment set:html={capability.icon} />
              </div>
              <h3 class="text-xl font-semibold text-[#0A4C76] mb-2">{capability.title}</h3>
              <p class="text-gray-600 text-sm leading-relaxed">{capability.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- СЕКЦИЯ 4: Тарифы -->
    <section class="py-24 bg-white">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <span class="inline-block px-4 py-2 bg-[#0A4C76]/10 text-[#0A4C76] font-medium rounded-full text-sm mb-4">
            Тарифы
          </span>
          <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900">
            Прозрачное ценообразование
          </h2>
        </div>

        <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto">
          {pricingPlans.map((plan) => (
            <div class:list={[
              "bg-white rounded-2xl p-6 border-2 relative",
              plan.recommended ? "border-[#0A4C76]" : "border-gray-200"
            ]}>
              {plan.recommended && (
                <div class="absolute -top-3 left-1/2 -translate-x-1/2 px-4 py-1 bg-[#0A4C76] text-white text-xs font-medium rounded-full">
                  Рекомендуем
                </div>
              )}
              <h3 class="text-xl font-bold text-gray-900 mb-1">{plan.name}</h3>
              <p class="text-gray-500 text-sm mb-4">{plan.description}</p>
              <div class="mb-6">
                <span class="text-4xl font-bold text-[#0A4C76]">{plan.price}</span>
                {plan.period && <span class="text-gray-500"> ₽{plan.period}</span>}
              </div>
              <ul class="space-y-3 mb-6">
                {plan.features.map((feature) => (
                  <li class="flex items-start gap-2 text-gray-600 text-sm">
                    <svg class="w-5 h-5 text-[#0A4C76] flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                    </svg>
                    {feature}
                  </li>
                ))}
              </ul>
              <a
                href="mailto:partners@planometrica.pro"
                class:list={[
                  "block w-full py-3 text-center font-semibold rounded-xl transition-colors",
                  plan.recommended
                    ? "text-white bg-[#0A4C76] hover:bg-[#083d5f]"
                    : "text-[#0A4C76] bg-[#0A4C76]/10 hover:bg-[#0A4C76]/20"
                ]}
              >
                {plan.cta}
              </a>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- СЕКЦИЯ 5: Процесс -->
    <section class="py-24 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <span class="inline-block px-4 py-2 bg-[#0A4C76]/10 text-[#0A4C76] font-medium rounded-full text-sm mb-4">
            Процесс
          </span>
          <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900">
            От заявки до запуска — 2 недели
          </h2>
        </div>

        <div class="grid md:grid-cols-4 gap-8 max-w-5xl mx-auto">
          {steps.map((step) => (
            <div class="text-center">
              <div class="w-12 h-12 mx-auto mb-4 rounded-full bg-[#0A4C76] flex items-center justify-center text-white font-bold">
                {step.number}
              </div>
              <h3 class="font-semibold text-gray-900 mb-2">{step.title}</h3>
              <p class="text-gray-600 text-sm">{step.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- СЕКЦИЯ 6: CTA -->
    <section class="py-24 bg-gradient-to-br from-[#0A4C76] via-[#1A7BB3] to-[#0A4C76] relative overflow-hidden">
      <!-- Blur decorations -->
      <div class="absolute top-10 left-10 w-64 h-64 bg-white/10 rounded-full blur-3xl"></div>
      <div class="absolute bottom-10 right-10 w-80 h-80 bg-white/10 rounded-full blur-3xl"></div>

      <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-4xl mx-auto text-center">
          <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-6">
            Готовы обсудить интеграцию?
          </h2>
          <p class="text-xl text-white/80 mb-10 max-w-2xl mx-auto">
            Расскажем о возможностях платформы, обсудим ваши сценарии и подготовим коммерческое предложение.
