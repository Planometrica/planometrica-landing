const banks = [
  { name: 'Сбербанк', rate: 'от 10.9%' },
  { name: 'ВТБ', rate: 'от 11.1%' },
  { name: 'Альфа-Банк', rate: 'от 10.99%' },
  { name: 'Газпромбанк', rate: 'от 11.5%' },
  { name: 'Росбанк', rate: 'от 10.99%' },
  { name: 'ДомРФ', rate: 'от 10.9%' },
]
---

<Layout
  title="Ипотека на строительство дома 2026 — калькулятор и программы"
  description="Ипотека ИЖС 2026: семейная от 6%, сельская от 3%, IT-ипотека. Калькулятор, сравнение банков, помощь с документами."
  keywords="ипотека на строительство дома, ипотека ИЖС, семейная ипотека, калькулятор ипотеки, льготная ипотека"
  ogImage="/images/og-mortgage.jpg"
  canonical="/mortgage"
  transparentHeader={true}
>
  <main>
    <ProductHero
      title="Ипотека"
      subtitle="Финансирование строительства"
      description="Рассчитайте ипотеку на строительство дома. Сравните предложения банков, узнайте о льготных программах и получите консультацию эксперта."
      gradient="from-[#1A7BB3] via-[#0A4C76] to-[#083d5f]"
      primaryCta={{ text: 'Рассчитать ипотеку', href: 'https://studio.planometrica.pro/mortgage' }}
      secondaryCta={{ text: 'Консультация', href: 'mailto:hello@planometrica.pro' }}
      features={['Калькулятор', 'Сравнение банков', 'Льготные программы', 'Консультация']}
    />

    <ProductFeatures
      badge="Возможности"
      title="Всё для оформления ипотеки"
      subtitle="От расчёта до одобрения"
      features={features}
      columns={3}
    />

    <!-- Calculator Preview -->
    <section class="py-24 bg-white">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <span class="inline-block px-4 py-2 bg-[#92CF93]/20 text-[#1A7BB3] font-medium rounded-full text-sm mb-4">
            Калькулятор
          </span>
          <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-4">
            Рассчитайте ипотеку
          </h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            Узнайте примерный ежемесячный платёж и переплату за весь срок кредита
          </p>
        </div>

        <div class="max-w-4xl mx-auto bg-gray-50 rounded-3xl p-8 md:p-12">
          <div class="grid md:grid-cols-2 gap-8">
            <!-- Input Side -->
            <div class="space-y-6">
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Стоимость дома</label>
                <div class="relative">
                  <input type="text" value="5 000 000" class="w-full px-4 py-3 border border-gray-200 rounded-xl text-lg font-medium" readonly />
                  <span class="absolute right-4 top-1/2 -translate-y-1/2 text-gray-500">₽</span>
                </div>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Первоначальный взнос</label>
                <div class="relative">
                  <input type="text" value="1 000 000" class="w-full px-4 py-3 border border-gray-200 rounded-xl text-lg font-medium" readonly />
                  <span class="absolute right-4 top-1/2 -translate-y-1/2 text-gray-500">20%</span>
                </div>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Срок кредита</label>
                <input type="text" value="20 лет" class="w-full px-4 py-3 border border-gray-200 rounded-xl text-lg font-medium" readonly />
              </div>
            </div>

            <!-- Result Side -->
            <div class="bg-gradient-to-br from-[#0A4C76] to-[#1A7BB3] rounded-2xl p-8 text-white">
              <div class="text-sm text-white/70 mb-1">Ежемесячный платёж</div>
              <div class="text-4xl font-bold mb-6">42 847 ₽</div>

              <div class="space-y-4 mb-8">
                <div class="flex justify-between">
                  <span class="text-white/70">Сумма кредита</span>
                  <span class="font-medium">4 000 000 ₽</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-white/70">Ставка</span>
                  <span class="font-medium">10.9%</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-white/70">Переплата</span>
                  <span class="font-medium">6 283 280 ₽</span>
                </div>
              </div>

              <a
                href="https://studio.planometrica.pro/mortgage"
                class="block w-full py-3 text-center font-semibold text-[#0A4C76] bg-white rounded-xl hover:bg-gray-100 transition-colors"
              >
                Подробный расчёт
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Banks -->
    <section class="py-24 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <span class="inline-block px-4 py-2 bg-[#0A4C76]/10 text-[#0A4C76] font-medium rounded-full text-sm mb-4">
            Банки-партнёры
          </span>
          <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-4">
            Сравните предложения
          </h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            Актуальные ставки на ипотеку для строительства дома
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-5xl mx-auto">
          {banks.map((bank) => (
            <div class="bg-white rounded-2xl p-6 border border-gray-100 hover:shadow-lg transition-shadow">
              <h3 class="text-xl font-semibold text-gray-900 mb-2">{bank.name}</h3>
              <div class="text-3xl font-bold text-[#0A4C76]">{bank.rate}</div>
              <div class="text-gray-500 text-sm">годовых</div>
            </div>
          ))}
        </div>

        <p class="text-center text-gray-500 text-sm mt-8">
          * Ставки актуальны на январь 2026. Финальные условия зависят от программы и заёмщика.
        </p>
      </div>
    </section>

    <ProductCTA
      title="Получите одобрение ипотеки"
      description="Консультация эксперта бесплатно. Поможем выбрать программу и подготовить документы."
      primaryCta={{ text: 'Получить консультацию', href: 'mailto:hello@planometrica.pro' }}
      secondaryCta={{ text: 'Рассчитать ипотеку', href: 'https://studio.planometrica.pro/mortgage' }}
    />
  </main>
</Layout>
