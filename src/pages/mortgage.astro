---
import Layout from '../layouts/Layout.astro'

const programs = [
  {
    name: 'Семейная ипотека',
    rate: 'от 6%',
    conditions: 'Для семей с детьми до 6 лет. Маткапитал 912,162 ₽ как первый взнос',
    badge: { text: 'Популярная', color: 'bg-[#92CF93]/20 text-[#0A4C76]' }
  },
  {
    name: 'Сельская ипотека',
    rate: 'от 3%',
    conditions: 'Для сельских территорий. До 6 млн ₽ (10 млн ДФО/Ленобласть)',
    badge: null
  },
  {
    name: 'IT-ипотека',
    rate: 'от 6%',
    conditions: 'Для сотрудников аккредитованных IT-компаний. До 18 млн ₽',
    badge: null
  },
  {
    name: 'Дальневосточная',
    rate: 'от 2%',
    conditions: 'ДФО и Арктическая зона. До 6 млн ₽. Самая низкая ставка',
    badge: { text: 'Минимальная ставка', color: 'bg-[#F59E0B]/20 text-[#92400E]' }
  },
  {
    name: 'Стандартная',
    rate: '22-24%',
    conditions: 'Без льгот, любой заёмщик. Доступна всем',
    badge: null
  }
]

const banks = [
  { name: 'Сбербанк', rate: 'от 10.9%' },
  { name: 'ВТБ', rate: 'от 11.1%' },
  { name: 'Альфа-Банк', rate: 'от 10.99%' },
  { name: 'Газпромбанк', rate: 'от 11.5%' },
  { name: 'Росбанк', rate: 'от 10.99%' },
  { name: 'ДомРФ', rate: 'от 10.9%' }
]

const packageItems = [
  'Эскизный проект дома',
  'Смета строительства',
  'СПОЗУ (схема планировочной организации)',
  'Технический паспорт проекта',
  '3D-визуализация для банка'
]
---

<Layout
  title="Ипотека на строительство дома 2026 — калькулятор и льготные программы"
  description="Ипотека ИЖС 2026: семейная от 6%, сельская от 3%, IT-ипотека от 6%, дальневосточная от 2%. Калькулятор, сравнение банков, ипотечный пакет 10,000₽."
  keywords="ипотека на строительство дома, ипотека ИЖС, семейная ипотека, калькулятор ипотеки, льготная ипотека 2026"
  ogImage="/images/og-mortgage.jpg"
  canonical="/mortgage"
  transparentHeader={true}
>
  <main>
    <!-- СЕКЦИЯ 1: Hero -->
    <section class="relative min-h-[80vh] flex items-center bg-gradient-to-br from-[#1A7BB3] via-[#0A4C76] to-[#083d5f] overflow-hidden">
      <!-- Blur decorations -->
      <div class="absolute top-20 left-10 w-96 h-96 bg-white/10 rounded-full blur-3xl"></div>
      <div class="absolute bottom-20 right-10 w-80 h-80 bg-[#92CF93]/20 rounded-full blur-3xl"></div>
      <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-[#1A7BB3]/20 rounded-full blur-3xl"></div>

      <div class="container mx-auto px-4 py-32 relative z-10">
        <div class="max-w-4xl mx-auto text-center">
          <!-- Badge -->
          <span class="inline-block px-4 py-2 bg-white/10 backdrop-blur-sm text-white font-medium rounded-full text-sm mb-6 border border-white/20">
            Ипотека ИЖС 2026
          </span>

          <!-- Title -->
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6 leading-tight">
            Ипотека на строительство дома — от 2% годовых
          </h1>

          <!-- Subtitle -->
          <p class="text-xl md:text-2xl text-white/80 mb-8 max-w-3xl mx-auto">
            Льготные программы, калькулятор, помощь с документами. Подготовим ипотечный пакет для банка.
          </p>

          <!-- Pills -->
          <div class="flex flex-wrap justify-center gap-3 mb-10">
            <span class="px-4 py-2 bg-white/10 backdrop-blur-sm text-white text-sm font-medium rounded-full border border-white/20">
              Семейная от 6%
            </span>
            <span class="px-4 py-2 bg-white/10 backdrop-blur-sm text-white text-sm font-medium rounded-full border border-white/20">
              Сельская от 3%
            </span>
            <span class="px-4 py-2 bg-white/10 backdrop-blur-sm text-white text-sm font-medium rounded-full border border-white/20">
              IT-ипотека от 6%
            </span>
            <span class="px-4 py-2 bg-white/10 backdrop-blur-sm text-white text-sm font-medium rounded-full border border-white/20">
              Дальневосточная от 2%
            </span>
          </div>

          <!-- CTAs -->
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a
              href="#calculator"
              class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-[#0A4C76] bg-white rounded-xl hover:bg-gray-100 transition-all duration-200 shadow-lg hover:shadow-xl"
            >
              Рассчитать ипотеку
            </a>
            <a
              href="mailto:hello@planometrica.pro"
              class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-white border-2 border-white/30 rounded-xl hover:bg-white/10 transition-all duration-200"
            >
              Получить консультацию
            </a>
          </div>
        </div>
      </div>

      <!-- Scroll Indicator -->
      <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
        <svg class="w-6 h-6 text-white/60" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
        </svg>
      </div>
    </section>

    <!-- СЕКЦИЯ 2: Льготные программы -->
    <section class="py-24 bg-white">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <span class="inline-block px-4 py-2 bg-[#92CF93]/20 text-[#0A4C76] font-medium rounded-full text-sm mb-4">
            Льготные программы 2026
          </span>
          <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900">
            Какая программа подходит вам?
          </h2>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-6xl mx-auto">
          {programs.map((program) => (
            <div class="relative bg-white rounded-2xl p-6 border border-gray-100 hover:shadow-lg hover:border-[#1A7BB3]/30 transition-all duration-300">
              {program.badge && (
                <span class={`absolute top-4 right-4 px-3 py-1 text-xs font-medium rounded-full ${program.badge.color}`}>
                  {program.badge.text}
                </span>
              )}
              <h3 class="text-xl font-bold text-[#0A4C76] mb-3 pr-20">
                {program.name}
              </h3>
              <div class="text-3xl font-bold text-[#0A4C76] mb-3">
                {program.rate}
              </div>
              <p class="text-gray-600 text-sm leading-relaxed">
                {program.conditions}
              </p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- СЕКЦИЯ 3: Калькулятор -->
    <section id="calculator" class="py-24 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <span class="inline-block px-4 py-2 bg-[#0A4C76]/10 text-[#0A4C76] font-medium rounded-full text-sm mb-4">
            Калькулятор
          </span>
          <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-4">
            Рассчитайте ипотеку
          </h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            Узнайте примерный ежемесячный платёж
          </p>
        </div>

        <div class="max-w-4xl mx-auto bg-white rounded-3xl p-8 md:p-12 shadow-sm border border-gray-100">
          <div class="grid md:grid-cols-2 gap-8">
            <!-- Input Side -->
            <div class="space-y-6">
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Стоимость дома</label>
                <div class="relative">
                  <input type="text" value="5 000 000" class="w-full px-4 py-3 border border-gray-200 rounded-xl text-lg font-medium bg-gray-50" readonly />
                  <span class="absolute right-4 top-1/2 -translate-y-1/2 text-gray-500">₽</span>
                </div>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Первоначальный взнос</label>
                <div class="relative">
                  <input type="text" value="1 000 000" class="w-full px-4 py-3 border border-gray-200 rounded-xl text-lg font-medium bg-gray-50" readonly />
                  <span class="absolute right-4 top-1/2 -translate-y-1/2 text-gray-500">20%</span>
                </div>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Срок кредита</label>
                <input type="text" value="20 лет" class="w-full px-4 py-3 border border-gray-200 rounded-xl text-lg font-medium bg-gray-50" readonly />
              </div>
            </div>

            <!-- Result Side -->
            <div class="bg-gradient-to-br from-[#0A4C76] to-[#1A7BB3] rounded-2xl p-8 text-white">
              <div class="text-sm text-white/70 mb-1">Ежемесячный платёж</div>
              <div class="text-4xl font-bold mb-6">42 847 ₽</div>

              <div class="space-y-4 mb-8">
                <div class="flex justify-between">
                  <span class="text-white/70">Сумма кредита</span>
                  <span class="font-medium">4 000 000 ₽</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-white/70">Ставка</span>
                  <span class="font-medium">10.9%</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-white/70">Переплата</span>
                  <span class="font-medium">6 283 280 ₽</span>
                </div>
              </div>

              <a
                href="https://studio.planometrica.ru"
                class="block w-full py-3 text-center font-semibold text-[#0A4C76] bg-white rounded-xl hover:bg-gray-100 transition-colors"
              >
                Подробный расчёт в Студии
              </a>
            </div>
          </div>
        </div>

        <p class="text-center text-gray-500 text-sm mt-6">
          Интерактивный калькулятор с выбором программы доступен в Студии
        </p>
      </div>
    </section>

    <!-- СЕКЦИЯ 4: Ипотечный пакет -->
    <section class="py-24 bg-white">
      <div class="container mx-auto px-4">
        <div class="max-w-5xl mx-auto">
          <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-12 text-center">
            Ипотечный пакет — подготовим документы для банка
          </h2>

          <div class="grid md:grid-cols-2 gap-12 items-center">
            <!-- Left: Description -->
            <div>
              <p class="text-xl text-gray-600 mb-8">
                Готовый комплект документов для подачи заявки на ипотеку ИЖС
              </p>

              <div class="space-y-4">
                {packageItems.map((item) => (
                  <div class="flex items-start gap-3">
                    <svg class="w-6 h-6 text-[#92CF93] flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                    </svg>
                    <span class="text-gray-700 text-lg">{item}</span>
                  </div>
                ))}
              </div>
            </div>

            <!-- Right: Price Card -->
            <div class="bg-gradient-to-br from-gray-50 to-white rounded-2xl p-8 border border-gray-100 shadow-lg">
              <div class="text-center">
                <div class="text-5xl font-bold text-[#0A4C76] mb-2">
                  10 000 ₽
                </div>
                <p class="text-gray-600 mb-8">
                  за полный ипотечный пакет
                </p>

                <a
                  href="https://studio.planometrica.ru"
                  class="inline-flex items-center justify-center w-full px-8 py-4 text-lg font-semibold text-[#0A4C76] bg-[#92CF93] rounded-xl hover:bg-[#7dbf7e] transition-all duration-200"
                >
                  Заказать пакет
                </a>

                <p class="text-gray-500 text-xs mt-4">
                  Или включён в Стандарт-пакет (14 900 ₽)
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- СЕКЦИЯ 5: Банки-партнёры -->
    <section class="py-24 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-4">
            Сравните предложения банков
          </h2>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-5xl mx-auto">
          {banks.map((bank) => (
            <div class="bg-white rounded-2xl p-6 border border-gray-100 hover:shadow-lg transition-shadow">
              <h3 class="text-xl font-semibold text-gray-900 mb-2">{bank.name}</h3>
              <div class="text-3xl font-bold text-[#0A4C76]">{bank.rate}</div>
              <div class="text-gray-500 text-sm">годовых</div>
            </div>
          ))}
        </div>

        <p class="text-center text-gray-500 text-sm mt-8">
          * Ставки актуальны на февраль 2026. Финальные условия зависят от программы и заёмщика.
        </p>
      </div>
    </section>

    <!-- СЕКЦИЯ 6: CTA -->
    <section class="py-24 bg-gradient-to-br from-[#0A4C76] via-[#1A7BB3] to-[#0A4C76] relative overflow-hidden">
      <!-- Blur decorations -->
      <div class="absolute top-10 left-10 w-64 h-64 bg-white/10 rounded-full blur-3xl"></div>
      <div class="absolute bottom-10 right-10 w-80 h-80 bg-white/10 rounded-full blur-3xl"></div>

      <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-4xl mx-auto text-center">
          <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-6">
            Получите одобрение ипотеки быстрее
          </h2>
          <p class="text-xl text-white/80 mb-10 max-w-2xl mx-auto">
            Спроектируйте дом в Студии → Закажите ипотечный пакет → Подайте заявку в банк
          </p>

          <div class="flex flex-col sm:flex-row gap-4 justify-center mb-12">
            <a
              href="https://studio.planometrica.ru"
              class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold bg-[#92CF93] text-[#0A4C76] rounded-xl hover:bg-[#7ec07f] transition-all duration-200 shadow-lg hover:shadow-xl hover:-translate-y-0.5"
            >
              Начать проект дома
            </a>
            <a
              href="mailto:hello@planometrica.pro"
              class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold bg-white/10 backdrop-blur-sm border border-white/30 text-white rounded-xl hover:bg-white/20 transition-all duration-200"
            >
              Консультация по ипотеке
            </a>
          </div>

          <!-- Trust badges -->
          <div class="flex flex-wrap items-center justify-center gap-8 pt-8 border-t border-white/20">
            <div class="flex items-center gap-2 text-white/70">
              <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z" />
              </svg>
              <span class="text-sm">Безопасное хранение данных</span>
            </div>
            <div class="flex items-center gap-2 text-white/70">
              <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m-3-2.818l.879.659c1.171.879 3.07.879 4.242 0 1.172-.879 1.172-2.303 0-3.182C13.536 12.219 12.768 12 12 12c-.725 0-1.45-.22-2.003-.659-1.106-.879-1.106-2.303 0-3.182s2.9-.879 4.006 0l.415.33M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span class="text-sm">Льготные программы от 2%</span>
            </div>
            <div class="flex items-center gap-2 text-white/70">
              <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9.879 7.519c1.171-1.025 3.071-1.025 4.242 0 1.172 1.025 1.172 2.687 0 3.712-.203.179-.43.326-.67.442-.745.361-1.45.999-1.45 1.827v.75M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-9 5.25h.008v.008H12v-.008z" />
              </svg>
              <span class="text-sm">Поддержка 24/7</span>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>
