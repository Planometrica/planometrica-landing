---
import Layout from '../layouts/Layout.astro'

const documentTypes = [
  {
    icon: `<svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
      <path stroke-linecap="round" stroke-linejoin="round" d="M9 6.75V15m6-6v8.25m.503 3.498l4.875-2.437c.381-.19.622-.58.622-1.006V4.82c0-.836-.88-1.38-1.628-1.006l-3.869 1.934c-.317.159-.69.159-1.006 0L9.503 3.252a1.125 1.125 0 00-1.006 0L3.622 5.689C3.24 5.88 3 6.27 3 6.695V19.18c0 .836.88 1.38 1.628 1.006l3.869-1.934c.317-.159.69-.159 1.006 0l4.994 2.497c.317.158.69.158 1.006 0z" />
    </svg>`,
    title: 'СПОЗУ',
    description: 'Схема планировочной организации земельного участка. Расположение дома, отступы от границ, подъезды — для уведомления о строительстве.'
  },
  {
    icon: `<svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
      <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12l8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25" />
    </svg>`,
    title: 'Планы этажей',
    description: 'Детальные поэтажные планы с размерами помещений, экспликацией и спецификацией материалов отделки.'
  },
  {
    icon: `<svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
      <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 21h16.5M4.5 3h15M5.25 3v18m13.5-18v18M9 6.75h1.5m-1.5 3h1.5m-1.5 3h1.5m3-6H15m-1.5 3H15m-1.5 3H15M9 21v-3.375c0-.621.504-1.125 1.125-1.125h3.75c.621 0 1.125.504 1.125 1.125V21" />
    </svg>`,
    title: 'Фасады',
    description: 'Чертежи фасадов со всех сторон с указанием высотных отметок и отделочных материалов.'
  },
  {
    icon: `<svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
      <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6A2.25 2.25 0 016 3.75h2.25A2.25 2.25 0 0110.5 6v2.25a2.25 2.25 0 01-2.25 2.25H6a2.25 2.25 0 01-2.25-2.25V6zM3.75 15.75A2.25 2.25 0 016 13.5h2.25a2.25 2.25 0 012.25 2.25V18a2.25 2.25 0 01-2.25 2.25H6A2.25 2.25 0 013.75 18v-2.25zM13.5 6a2.25 2.25 0 012.25-2.25H18A2.25 2.25 0 0120.25 6v2.25A2.25 2.25 0 0118 10.5h-2.25a2.25 2.25 0 01-2.25-2.25V6zM13.5 15.75a2.25 2.25 0 012.25-2.25H18a2.25 2.25 0 012.25 2.25V18A2.25 2.25 0 0118 20.25h-2.25A2.25 2.25 0 0113.5 18v-2.25z" />
    </svg>`,
    title: 'Разрезы',
    description: 'Вертикальные разрезы здания с конструктивными узлами и высотными отметками.'
  },
  {
    icon: `<svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
      <path stroke-linecap="round" stroke-linejoin="round" d="M6.827 6.175A2.31 2.31 0 015.186 7.23c-.38.054-.757.112-1.134.175C2.999 7.58 2.25 8.507 2.25 9.574V18a2.25 2.25 0 002.25 2.25h15A2.25 2.25 0 0021.75 18V9.574c0-1.067-.75-1.994-1.802-2.169a47.865 47.865 0 00-1.134-.175 2.31 2.31 0 01-1.64-1.055l-.822-1.316a2.192 2.192 0 00-1.736-1.039 48.774 48.774 0 00-5.232 0 2.192 2.192 0 00-1.736 1.039l-.821 1.316z" />
      <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 12.75a4.5 4.5 0 11-9 0 4.5 4.5 0 019 0zM18.75 10.5h.008v.008h-.008V10.5z" />
    </svg>`,
    title: '3D визуализация',
    description: 'Фотореалистичные рендеры экстерьера с разных ракурсов. 5 изображений в комплекте.'
  },
  {
    icon: `<svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
      <path stroke-linecap="round" stroke-linejoin="round" d="M9 12h3.75M9 15h3.75M9 18h3.75m3 .75H18a2.25 2.25 0 002.25-2.25V6.108c0-1.135-.845-2.098-1.976-2.192a48.424 48.424 0 00-1.123-.08m-5.801 0c-.065.21-.1.433-.1.664 0 .414.336.75.75.75h4.5a.75.75 0 00.75-.75 2.25 2.25 0 00-.1-.664m-5.8 0A2.251 2.251 0 0113.5 2.25H15c1.012 0 1.867.668 2.15 1.586m-5.8 0c-.376.023-.75.05-1.124.08C9.095 4.01 8.25 4.973 8.25 6.108V8.25m0 0H4.875c-.621 0-1.125.504-1.125 1.125v11.25c0 .621.504 1.125 1.125 1.125h9.75c.621 0 1.125-.504 1.125-1.125V9.375c0-.621-.504-1.125-1.125-1.125H8.25z" />
    </svg>`,
    title: 'Ведомости и сметы',
    description: 'Ведомости материалов, окон, дверей. Предварительные сметы на строительство и отделку.'
  }
]

const packages = [
  {
    name: 'СПОЗУ',
    price: '490',
    description: 'Для уведомления о строительстве',
    includes: [
      'Схема участка с домом',
      'Зоны отступов от границ',
      'Подъезды и проезды',
      'Соответствие нормам ИЖС',
      'Готово за 1 день'
    ],
    popular: false
  },
  {
    name: 'Стандарт-пакет',
    price: '14 900',
    description: 'Полный комплект документации',
    includes: [
      'Планы этажей + фасады',
      'СПОЗУ включён',
      '3D визуализация (5 рендеров)',
      'Ведомость материалов',
      'Предварительная смета',
      'Готово за 3 дня'
    ],
    popular: true
  },
  {
    name: 'AI Визуализация',
    price: '990',
    description: 'Фотореалистичные рендеры',
    includes: [
      '5 рендеров экстерьера',
      'Разные ракурсы и время суток',
      'Высокое разрешение (4K)',
      'Выбор окружения (лес, поле, город)',
      'Готово за 1 час'
    ],
    popular: false
  },
  {
    name: 'Ипотечный пакет',
    price: '10 000',
    description: 'Документы для банка',
    includes: [
      'Полный Стандарт-пакет',
      'Проектная декларация',
      'Смета для банка (форма банка)',
      'Техническое заключение',
      'Сопроводительное письмо',
      'Готово за 5 дней'
    ],
    popular: false
  }
]

const steps = [
  {
    number: 1,
    title: 'Загрузите проект',
    description: 'Из Студии, ПланоCAD или внешний файл',
    accent: false
  },
  {
    number: 2,
    title: 'Выберите пакет',
    description: 'СПОЗУ, Стандарт или Ипотечный',
    accent: false
  },
  {
    number: 3,
    title: 'AI генерирует',
    description: 'Автоматическое создание документов по ГОСТ',
    accent: false
  },
  {
    number: 4,
    title: 'Скачайте готовое',
    description: 'PDF, DWG, DXF — любой формат',
    accent: true
  }
]

const pills = ['СПОЗУ', 'Планы этажей', 'Фасады', 'Сметы', '3D визуализация']
---

<Layout
  title="Документы для строительства дома — СПОЗУ, чертежи, сметы"
  description="СПОЗУ за 490₽, полный пакет от 14 900₽. Автоматическая генерация проектной документации по ГОСТ."
  keywords="СПОЗУ, проектная документация ИЖС, чертежи дома, документы для строительства, разрешение на строительство"
  ogImage="/images/og-docs.jpg"
  canonical="/docs"
  schema={{
    '@context': 'https://schema.org',
    '@type': 'Service',
    name: 'Проектная документация для ИЖС',
    description: 'Автоматическая генерация СПОЗУ, эскизных проектов, ведомостей материалов и смет по ГОСТ.',
    url: 'https://planometrica.ru/docs',
    provider: { '@type': 'Organization', name: 'Планометрика' },
    hasOfferCatalog: {
      '@type': 'OfferCatalog',
      name: 'Документы для строительства',
      itemListElement: [
        { '@type': 'Offer', name: 'СПОЗУ', price: '490', priceCurrency: 'RUB' },
        { '@type': 'Offer', name: 'Стандарт-пакет', price: '14900', priceCurrency: 'RUB', description: 'Планировки, фасады, СПОЗУ, ведомость материалов' },
        { '@type': 'Offer', name: 'AI Визуализация', price: '990', priceCurrency: 'RUB', description: '5 фотореалистичных рендеров' },
      ],
    },
  }}
  transparentHeader={true}
>
  <main>
    <!-- СЕКЦИЯ 1: Hero -->
    <section class="relative min-h-[80vh] flex items-center bg-gradient-to-br from-[#0A4C76] to-[#1A7BB3] overflow-hidden">
      <!-- Blur decorations -->
      <div class="absolute top-20 left-10 w-96 h-96 bg-white/10 rounded-full blur-3xl"></div>
      <div class="absolute bottom-20 right-10 w-80 h-80 bg-[#92CF93]/20 rounded-full blur-3xl"></div>
      <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-white/5 rounded-full blur-3xl"></div>

      <div class="container mx-auto px-4 py-32 relative z-10">
        <div class="max-w-4xl mx-auto text-center">
          <!-- Badge -->
          <span class="inline-block px-4 py-2 bg-white/10 backdrop-blur-sm text-white font-medium rounded-full text-sm mb-6 border border-white/20">
            Проектная документация
          </span>

          <!-- Title -->
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6 leading-tight">
            Документы для строительства дома
          </h1>

          <!-- Subtitle -->
          <p class="text-xl md:text-2xl text-white/90 mb-4 font-medium">
            СПОЗУ от 490 ₽ · Полный пакет от 14 900 ₽ · Генерация по ГОСТ
          </p>

          <!-- Description -->
          <p class="text-lg text-white/70 mb-8 max-w-3xl mx-auto">
            Автоматическая генерация проектной документации из вашего проекта. Загрузите планировку — получите готовый комплект для согласования и строительства.
          </p>

          <!-- CTAs -->
          <div class="flex flex-col sm:flex-row gap-4 justify-center mb-10">
            <a
              href="https://studio.planometrica.ru"
              class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-[#0A4C76] bg-white rounded-xl hover:bg-gray-100 transition-all duration-200 shadow-lg hover:shadow-xl"
            >
              Создать документы
            </a>
            <a
              href="#packages"
              class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-white border-2 border-white/30 rounded-xl hover:bg-white/10 transition-all duration-200"
            >
              Примеры документов
            </a>
          </div>

          <!-- Pills -->
          <div class="flex flex-wrap justify-center gap-3">
            {pills.map((pill) => (
              <span class="px-4 py-2 bg-white/10 backdrop-blur-sm text-white text-sm font-medium rounded-full border border-white/20">
                {pill}
              </span>
            ))}
          </div>
        </div>
      </div>

      <!-- Scroll Indicator -->
      <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
        <svg class="w-6 h-6 text-white/60" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
        </svg>
      </div>
    </section>

    <!-- СЕКЦИЯ 2: Состав документации -->
    <section class="py-24 bg-white">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <span class="inline-block px-4 py-2 bg-[#92CF93]/20 text-[#1A7BB3] font-medium rounded-full text-sm mb-4">
            Что мы генерируем
          </span>
          <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-4">
            Полный комплект документации
          </h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            Всё необходимое для согласования и строительства
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-6xl mx-auto">
          {documentTypes.map((doc) => (
            <div class="bg-white rounded-2xl p-6 border border-gray-100 hover:shadow-lg hover:border-[#1A7BB3]/30 transition-all duration-300">
              <div class="w-14 h-14 bg-[#0A4C76]/10 rounded-xl flex items-center justify-center text-[#0A4C76] mb-4">
                <Fragment set:html={doc.icon} />
              </div>
              <h3 class="text-xl font-semibold text-[#0A4C76] mb-2">{doc.title}</h3>
              <p class="text-gray-600 leading-relaxed">{doc.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- СЕКЦИЯ 3: Пакеты документов -->
    <section id="packages" class="py-24 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <span class="inline-block px-4 py-2 bg-[#92CF93]/20 text-[#1A7BB3] font-medium rounded-full text-sm mb-4">
            Тарифы
          </span>
          <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-4">
            Выберите пакет документов
          </h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            Документация под любую задачу — от уведомления до полного проекта
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-6xl mx-auto">
          {packages.map((pkg) => (
            <div class:list={[
              "bg-white rounded-2xl p-6 border-2 relative",
              pkg.popular ? "border-[#0A4C76]" : "border-gray-200"
            ]}>
              {pkg.popular && (
                <div class="absolute -top-3 left-1/2 -translate-x-1/2 px-4 py-1 bg-[#0A4C76] text-white text-xs font-medium rounded-full">
                  Популярный
                </div>
              )}
              <h3 class="text-xl font-bold text-gray-900 mb-1">{pkg.name}</h3>
              <p class="text-gray-500 text-sm mb-4">{pkg.description}</p>
              <div class="mb-6">
                <span class="text-4xl font-bold text-[#0A4C76]">{pkg.price} ₽</span>
              </div>
              <ul class="space-y-3 mb-6">
                {pkg.includes.map((item) => (
                  <li class="flex items-start gap-2 text-gray-600 text-sm">
                    <svg class="w-5 h-5 text-[#92CF93] flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                    </svg>
                    {item}
                  </li>
                ))}
              </ul>
              <a
                href="https://studio.planometrica.ru"
                class:list={[
                  "block w-full py-3 text-center font-semibold rounded-xl transition-colors",
                  pkg.popular
                    ? "text-white bg-[#0A4C76] hover:bg-[#083d5f]"
                    : "text-[#0A4C76] bg-[#0A4C76]/10 hover:bg-[#0A4C76]/20"
                ]}
              >
                Заказать
              </a>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- СЕКЦИЯ 4: Процесс -->
    <section class="py-24 bg-white">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <span class="inline-block px-4 py-2 bg-[#0A4C76]/10 text-[#0A4C76] font-medium rounded-full text-sm mb-4">
            Как это работает
          </span>
          <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900">
            4 шага к документам
          </h2>
        </div>

        <div class="grid md:grid-cols-4 gap-8 max-w-5xl mx-auto">
          {steps.map((step) => (
            <div class="text-center">
              <div class:list={[
                "w-12 h-12 mx-auto mb-4 rounded-full flex items-center justify-center text-white font-bold",
                step.accent ? "bg-[#92CF93]" : "bg-[#0A4C76]"
              ]}>
                {step.number}
              </div>
              <h3 class="font-semibold text-gray-900 mb-2">{step.title}</h3>
              <p class="text-gray-600 text-sm">{step.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- СЕКЦИЯ 5: CTA -->
    <section class="py-24 bg-gradient-to-br from-[#0A4C76] via-[#1A7BB3] to-[#0A4C76] relative overflow-hidden">
      <!-- Blur decorations -->
      <div class="absolute top-10 left-10 w-64 h-64 bg-white/10 rounded-full blur-3xl"></div>
      <div class="absolute bottom-10 right-10 w-80 h-80 bg-white/10 rounded-full blur-3xl"></div>

      <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-4xl mx-auto text-center">
          <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-6">
            Получите документацию за минуты
          </h2>
          <p class="text-xl text-white/80 mb-10 max-w-2xl mx-auto">
            Загрузите проект — получите готовый комплект документов для строительства и согласования.
          </p>

          <div class="flex flex-col sm:flex-row gap-4 justify-center mb-12">
            <a
              href="https://studio.planometrica.ru"
              class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold bg-[#92CF93] text-[#0A4C76] rounded-xl hover:bg-[#7ec07f] transition-all duration-200 shadow-lg hover:shadow-xl hover:-translate-y-0.5"
            >
              Создать документы
            </a>
            <a
              href="mailto:hello@planometrica.pro"
              class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold bg-white/10 backdrop-blur-sm border border-white/30 text-white rounded-xl hover:bg-white/20 transition-all duration-200"
            >
              hello@planometrica.pro
            </a>
          </div>

          <!-- Trust badges -->
          <div class="flex flex-wrap items-center justify-center gap-8 pt-8 border-t border-white/20">
            <div class="flex items-center gap-2 text-white/70">
              <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z" />
              </svg>
              <span class="text-sm">Генерация по ГОСТ</span>
            </div>
            <div class="flex items-center gap-2 text-white/70">
              <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 8.25h19.5M2.25 9h19.5m-16.5 5.25h6m-6 2.25h3m-3.75 3h15a2.25 2.25 0 002.25-2.25V6.75A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25v10.5A2.25 2.25 0 004.5 19.5z" />
              </svg>
              <span class="text-sm">СПОЗУ от 490 ₽</span>
            </div>
            <div class="flex items-center gap-2 text-white/70">
              <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span class="text-sm">Готово за 1 день</span>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>
