const styles = [
  { name: 'Классика', description: 'Симметрия, колонны, лепнина' },
  { name: 'Скандинавский', description: 'Дерево, простота, уют' },
  { name: 'Минимализм', description: 'Чистые линии, плоская кровля' },
  { name: 'Барнхаус', description: 'Амбарный стиль, открытое пространство' },
  { name: 'A-Frame', description: 'Треугольная форма, панорамные окна' },
  { name: 'Фахверк', description: 'Каркасная конструкция, немецкий стиль' },
  { name: 'Шале', description: 'Альпийский стиль, покатая крыша' },
  { name: 'Хай-тек', description: 'Стекло, металл, современность' },
  { name: 'Русский / Изба', description: 'Бревно, резьба, традиции' },
