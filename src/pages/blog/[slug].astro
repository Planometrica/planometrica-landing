---
import Layout from '../../layouts/Layout.astro'
import { getBlogPosts, getBlogPostBySlug, urlFor } from '../../lib/sanity'

export async function getStaticPaths() {
  const posts = await getBlogPosts()
  return posts.map((post) => ({
    params: { slug: post.slug.current },
  }))
}

const { slug } = Astro.params
const post = await getBlogPostBySlug(slug as string)

if (!post) {
  return Astro.redirect('/blog')
}

const categoryLabels = {
  design: 'Проектирование',
  construction: 'Строительство',
  docs: 'Документы',
  mortgage: 'Ипотека',
  ai: 'Технологии',
  news: 'Новости'
}

const formatDate = (dateStr: string) => {
  const date = new Date(dateStr)
  return date.toLocaleDateString('ru-RU', { year: 'numeric', month: 'long', day: 'numeric' })
}

const getCategoryLabel = (categories?: string[]) => {
  if (!categories || categories.length === 0) return 'Статья'
  const cat = categories[0]
  return (categoryLabels as any)[cat] || cat
}

const renderPortableText = (blocks: any[]) => {
  if (!blocks || !Array.isArray(blocks)) return ''

  return blocks.map(block => {
    if (block._type === 'block') {
      const children = block.children?.map((child: any) => {
        let text = child.text || ''
        if (child.marks?.includes('strong')) text = `<strong>${text}</strong>`
        if (child.marks?.includes('em')) text = `<em>${text}</em>`
        if (child.marks?.includes('code')) text = `<code>${text}</code>`
        return text
      }).join('') || ''

      switch (block.style) {
        case 'h1': return `<h1 class="text-3xl font-bold mt-8 mb-4">${children}</h1>`
        case 'h2': return `<h2 class="text-2xl font-bold mt-8 mb-4">${children}</h2>`
        case 'h3': return `<h3 class="text-xl font-bold mt-6 mb-3">${children}</h3>`
        case 'h4': return `<h4 class="text-lg font-semibold mt-4 mb-2">${children}</h4>`
        case 'blockquote': return `<blockquote class="border-l-4 border-[#0A4C76] pl-4 my-4 italic text-gray-600">${children}</blockquote>`
        default:
          if (block.listItem === 'bullet') {
            return `<li class="ml-6 list-disc">${children}</li>`
          }
          if (block.listItem === 'number') {
            return `<li class="ml-6 list-decimal">${children}</li>`
          }
          return children ? `<p class="mb-4 leading-relaxed">${children}</p>` : ''
      }
    }

    if (block._type === 'image' && block.asset) {
      const imageUrl = urlFor(block).width(800).url()
      const alt = block.alt || ''
      const caption = block.caption || ''
      return `<figure class="my-8"><img src="${imageUrl}" alt="${alt}" class="rounded-xl w-full" />${caption ? `<figcaption class="text-center text-sm text-gray-500 mt-2">${caption}</figcaption>` : ''}</figure>`
    }

    return ''
  }).join('')
}

const bodyHtml = renderPortableText(post.body || [])
const shareUrl = `https://planometrica.ru/blog/${post.slug.current}`
---

<Layout
  title={`${post.title} — Блог Планометрики`}
  description={post.excerpt}
>
  <main>
    <div class="pt-24 pb-4 bg-white border-b border-gray-100">
      <div class="container mx-auto px-4">
        <a href="/blog" class="inline-flex items-center gap-2 text-[#0A4C76] hover:underline">
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
          </svg>
          Все статьи
        </a>
      </div>
    </div>

    <article class="py-12">
      <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto">
          <div class="flex flex-wrap items-center gap-3 mb-6">
            <span class="px-3 py-1 bg-[#92CF93]/20 text-[#1A7BB3] text-sm font-medium rounded-full">
              {getCategoryLabel(post.categories)}
            </span>
            <span class="text-gray-500">{formatDate(post.publishedAt)}</span>
            {post.readTime && (
              <span class="text-gray-500">· {post.readTime} мин чтения</span>
            )}
          </div>

          <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-6 leading-tight">
            {post.title}
          </h1>

          <p class="text-xl text-gray-600 mb-8">
            {post.excerpt}
          </p>

          {post.author && (
            <div class="flex items-center gap-4 pb-8 border-b border-gray-200">
              {post.author.image ? (
                <img
                  src={urlFor(post.author.image).width(48).height(48).url()}
                  alt={post.author.name}
                  class="w-12 h-12 rounded-full object-cover"
                />
              ) : (
                <div class="w-12 h-12 rounded-full bg-[#0A4C76]/10 flex items-center justify-center">
                  <svg class="w-6 h-6 text-[#0A4C76]" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z" />
                  </svg>
                </div>
              )}
              <div>
                <div class="font-medium text-gray-900">{post.author.name}</div>
                <div class="text-sm text-gray-500">Автор</div>
              </div>
            </div>
          )}

          {post.mainImage && (
            <div class="my-10">
              <img
                src={urlFor(post.mainImage).width(800).height(450).url()}
                alt={post.mainImage.alt || post.title}
                class="w-full rounded-2xl"
              />
            </div>
          )}

          <div class="prose prose-lg max-w-none text-gray-700" set:html={bodyHtml} />

          <div class="mt-12 pt-8 border-t border-gray-200">
            <div class="flex items-center justify-between flex-wrap gap-4">
              <div class="text-gray-600">
                Понравилась статья? Поделитесь с друзьями
              </div>
              <div class="flex gap-3">
                <a
                  href={`https://t.me/share/url?url=${encodeURIComponent(shareUrl)}&text=${encodeURIComponent(post.title)}`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="w-10 h-10 rounded-full bg-[#0088cc] flex items-center justify-center text-white hover:opacity-80 transition-opacity"
                  title="Поделиться в Telegram"
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M11.944 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12 12 12 0 0 0 12-12A12 12 0 0 0 12 0a12 12 0 0 0-.056 0zm4.962 7.224c.1-.002.321.023.465.14a.506.506 0 0 1 .171.325c.016.093.036.306.02.472-.18 1.898-.962 6.502-1.36 8.627-.168.9-.499 1.201-.82 1.23-.696.065-1.225-.46-1.9-.902-1.056-.693-1.653-1.124-2.678-1.8-1.185-.78-.417-1.21.258-1.91.177-.184 3.247-2.977 3.307-3.23.007-.032.014-.15-.056-.212s-.174-.041-.249-.024c-.106.024-1.793 1.14-5.061 3.345-.48.33-.913.49-1.302.48-.428-.008-1.252-.241-1.865-.44-.752-.245-1.349-.374-1.297-.789.027-.216.325-.437.893-.663 3.498-1.524 5.83-2.529 6.998-3.014 3.332-1.386 4.025-1.627 4.476-1.635z"/>
                  </svg>
                </a>
                <a
                  href={`https://vk.com/share.php?url=${encodeURIComponent(shareUrl)}&title=${encodeURIComponent(post.title)}`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="w-10 h-10 rounded-full bg-[#4a76a8] flex items-center justify-center text-white hover:opacity-80 transition-opacity"
                  title="Поделиться в VK"
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M15.684 0H8.316C1.592 0 0 1.592 0 8.316v7.368C0 22.408 1.592 24 8.316 24h7.368C22.408 24 24 22.408 24 15.684V8.316C24 1.592 22.408 0 15.684 0zm3.692 17.123h-1.744c-.66 0-.862-.523-2.049-1.712-1.033-1.033-1.49-1.173-1.744-1.173-.356 0-.458.102-.458.593v1.563c0 .424-.135.678-1.253.678-1.846 0-3.896-1.118-5.335-3.202C4.624 10.857 4 8.684 4 8.245c0-.254.102-.491.593-.491h1.744c.44 0 .61.203.78.678.863 2.49 2.303 4.675 2.896 4.675.22 0 .322-.102.322-.66V9.721c-.068-1.186-.695-1.287-.695-1.71 0-.203.17-.407.44-.407h2.744c.373 0 .508.203.508.643v3.473c0 .372.17.508.271.508.22 0 .407-.136.813-.542 1.254-1.406 2.151-3.574 2.151-3.574.119-.254.322-.491.763-.491h1.744c.525 0 .644.27.525.643-.22 1.017-2.354 4.031-2.354 4.031-.186.305-.254.44 0 .78.186.254.796.779 1.203 1.253.745.847 1.32 1.558 1.473 2.049.17.474-.085.72-.576.72z"/>
                  </svg>
                </a>
                <a
                  href="https://web.max.ru/"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="w-10 h-10 rounded-full overflow-hidden hover:opacity-80 transition-opacity"
                  title="Поделиться в MAX"
                >
                  <img src="/images/max-logo.png" alt="MAX" class="w-full h-full object-cover" />
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </article>

    <section class="py-16 bg-gray-50">
      <div class="container mx-auto px-4 text-center">
        <h2 class="text-2xl font-bold text-gray-900 mb-4">Читайте также</h2>
        <p class="text-gray-600 mb-6">Другие полезные статьи о проектировании и строительстве</p>
        <a
          href="/blog"
          class="inline-flex items-center gap-2 px-6 py-3 bg-[#0A4C76] text-white font-semibold rounded-xl hover:bg-[#083d5f] transition-colors"
        >
          Все статьи
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
          </svg>
        </a>
      </div>
    </section>
  </main>
</Layout>
