]

const {
  title = 'Как создать проект дома',
  subtitle = 'за 5 простых шагов',
  steps = defaultSteps,
  ctaText = 'Начать создание →',
  ctaHref = 'https://studio.planometrica.ru'
} = Astro.props
---

<section class="py-20 lg:py-28 bg-white">
  <div class="container mx-auto px-4">
    <!-- Header -->
    <div class="text-center mb-16">
      <span class="inline-block px-4 py-2 bg-[#92CF93]/20 text-[#0A4C76] font-medium rounded-full text-sm mb-4">
        Как это работает
      </span>
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-2">
        {title}
      </h2>
      <p class="text-xl md:text-2xl text-[#1A7BB3] font-medium">
        {subtitle}
      </p>
    </div>

    <!-- Steps -->
    <div>
      <div class="grid md:grid-cols-3 lg:grid-cols-5 gap-6 mb-12">
        {steps.map((step, index) => (
          <div class="relative">
            {/* Connector line */}
            {index < steps.length - 1 && (
              <div class="hidden lg:block absolute top-10 left-[calc(50%+2.5rem)] w-[calc(100%-5rem)] h-0.5 bg-gradient-to-r from-[#0A4C76] to-[#1A7BB3]"></div>
            )}

            <div class="bg-gradient-to-br from-gray-50 to-white rounded-2xl p-6 border border-gray-100 hover:border-[#1A7BB3]/30 hover:shadow-lg transition-all duration-300 h-full">
              {/* Step Number and Icon */}
              <div class="flex items-center gap-3 mb-4">
                <div class="w-12 h-12 bg-gradient-to-br from-[#0A4C76] to-[#1A7BB3] rounded-xl flex items-center justify-center text-white text-xl font-bold shadow-md flex-shrink-0">
                  {step.number}
                </div>
                <div class="text-[#1A7BB3]">
                  <Fragment set:html={step.icon} />
                </div>
              </div>

              {/* Title */}
              <h3 class="text-lg font-bold text-gray-900 mb-2">{step.title}</h3>

              {/* Description */}
              <p class="text-gray-600 text-sm mb-4">{step.description}</p>

              {/* Features list */}
              {step.features && step.features.length > 0 && (
                <ul class="space-y-2">
                  {step.features.map((feature) => (
                    <li class="text-sm text-[#0A4C76] flex items-start gap-2">
                      <svg class="w-4 h-4 text-[#92CF93] flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                      </svg>
                      {feature}
                    </li>
                  ))}
                </ul>
              )}
            </div>
          </div>
        ))}
      </div>

      {/* CTA */}
      <div class="text-center">
        <a
          href={ctaHref}
          class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-white bg-gradient-to-r from-[#0A4C76] to-[#1A7BB3] rounded-xl hover:from-[#093d5f] hover:to-[#156999] transition-all duration-200 shadow-lg hover:shadow-xl hover:-translate-y-0.5"
        >
          {ctaText}
        </a>
      </div>
    </div>
  </div>
</section>
