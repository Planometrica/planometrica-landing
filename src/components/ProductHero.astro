---
import type { Product as SanityProduct, CTA } from '../lib/sanity'

interface Props {
  product?: SanityProduct | null
  badge?: string
  title?: string
  subtitle?: string
  description?: string
  primaryCta?: CTA | { text: string; href: string }
  secondaryCta?: CTA | { text: string; href: string }
  gradient?: string
  features?: string[]
}

const {
  product,
  badge: propsBadge,
  title: propsTitle,
  subtitle: propsSubtitle,
  description: propsDescription,
  primaryCta: propsPrimaryCta,
  secondaryCta: propsSecondaryCta,
  gradient: propsGradient,
  features: propsFeatures
} = Astro.props

// Merge product data with props (props override product data)
const badge = propsBadge || (product?.name ? `Продукт` : 'Продукт')
const title = propsTitle || product?.name || 'Название продукта'
const subtitle = propsSubtitle || product?.tagline || ''
const description = propsDescription || product?.description || ''
const gradient = propsGradient || product?.gradient || 'from-[#0A4C76] via-[#1A7BB3] to-[#0A4C76]'
const features = propsFeatures || product?.featureBadges || []

// Handle CTA - convert Sanity CTA to component format
const primaryCta = propsPrimaryCta
  ? ('href' in propsPrimaryCta ? propsPrimaryCta : { text: propsPrimaryCta.text || '', href: propsPrimaryCta.link || '#' })
  : product?.primaryCta
    ? { text: product.primaryCta.text || 'Начать', href: product.primaryCta.link || product.productUrl || '#' }
    : { text: 'Начать', href: '#' }

const secondaryCta = propsSecondaryCta
  ? ('href' in propsSecondaryCta ? propsSecondaryCta : { text: propsSecondaryCta.text || '', href: propsSecondaryCta.link || '#' })
  : product?.secondaryCta
    ? { text: product.secondaryCta.text || '', href: product.secondaryCta.link || '#' }
    : undefined
---

<section class={`relative pt-32 pb-20 lg:pt-40 lg:pb-32 overflow-hidden bg-gradient-to-br ${gradient}`}>
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute inset-0" style="background-image: url('data:image/svg+xml,<svg width=\"60\" height=\"60\" viewBox=\"0 0 60 60\" xmlns=\"http://www.w3.org/2000/svg\"><g fill=\"none\" fill-rule=\"evenodd\"><g fill=\"%23ffffff\" fill-opacity=\"0.4\"><path d=\"M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z\"/></g></g></svg>'); background-size: 60px 60px;"></div>
  </div>

  <div class="relative z-10 container mx-auto px-4">
    <div class="max-w-4xl mx-auto text-center">
      <!-- Badge -->
      <div class="inline-flex items-center gap-2 px-4 py-2 bg-white/10 backdrop-blur-sm rounded-full border border-white/20 mb-8">
        <span class="text-white/90 text-sm font-medium">{badge}</span>
      </div>

      <!-- Title -->
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-4 tracking-tight">
        {title}
      </h1>

      <!-- Subtitle -->
      <p class="text-2xl md:text-3xl font-semibold text-white/90 mb-6">
        {subtitle}
      </p>

      <!-- Description -->
      <p class="text-lg md:text-xl text-white/70 mb-10 max-w-2xl mx-auto leading-relaxed">
        {description}
      </p>

      <!-- Features Pills -->
      {features.length > 0 && (
        <div class="flex flex-wrap justify-center gap-3 mb-10">
          {features.map((feature) => (
            <span class="px-4 py-2 bg-white/10 backdrop-blur-sm rounded-full text-white/90 text-sm border border-white/20">
              {feature}
            </span>
          ))}
        </div>
      )}

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href={primaryCta.href}
          class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-[#0A4C76] bg-white rounded-xl hover:bg-gray-100 transition-all duration-200 shadow-lg hover:shadow-xl hover:-translate-y-0.5"
        >
          {primaryCta.text}
          <svg class="ml-2 w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6" />
          </svg>
        </a>
        {secondaryCta && (
          <a
            href={secondaryCta.href}
            class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-white bg-white/10 backdrop-blur-sm border border-white/30 rounded-xl hover:bg-white/20 transition-all duration-200"
          >
            {secondaryCta.text}
          </a>
        )}
      </div>
    </div>
  </div>
</section>
