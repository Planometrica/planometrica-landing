---
interface DocItem {
  title: string
  description: string
  price: string
  icon: string
  features: string[]
  ctaText?: string
  ctaHref?: string
}

interface Props {
  items: DocItem[]
}

const { items } = Astro.props
---

<section class="py-20 lg:py-28 bg-white">
  <div class="container mx-auto px-4">
    <div class="max-w-5xl mx-auto">
      <div class="grid md:grid-cols-2 gap-6">
        {items.map((item) => (
          <div class="bg-gradient-to-br from-gray-50 to-white rounded-2xl p-6 lg:p-8 border border-gray-100 hover:border-[#1A7BB3]/30 hover:shadow-lg transition-all duration-300">
            {/* Header */}
            <div class="flex items-start justify-between mb-4">
              <div class="flex items-center gap-4">
                <div class="w-12 h-12 bg-gradient-to-br from-[#0A4C76] to-[#1A7BB3] rounded-xl flex items-center justify-center text-2xl">
                  {item.icon}
                </div>
                <div>
                  <h3 class="text-xl font-bold text-gray-900">{item.title}</h3>
                  <p class="text-sm text-gray-600">{item.description}</p>
                </div>
              </div>
            </div>

            {/* Price */}
            <div class="mb-6">
              <span class="text-3xl font-bold text-[#0A4C76]">{item.price}</span>
            </div>

            {/* Features */}
            <ul class="space-y-2 mb-6">
              {item.features.map((feature) => (
                <li class="flex items-start gap-2 text-sm text-gray-700">
                  <svg class="w-5 h-5 text-[#92CF93] flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                  </svg>
                  {feature}
                </li>
              ))}
            </ul>

            {/* CTA */}
            <a
              href={item.ctaHref || 'https://studio.planometrica.pro'}
              class="block w-full text-center py-3 px-6 bg-[#0A4C76] text-white font-semibold rounded-xl hover:bg-[#093d5f] transition-colors"
            >
              {item.ctaText || 'Заказать'}
            </a>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
