---
interface Style {
  name: string
  description: string
  image?: string
  color?: string
}

interface Props {
  styles?: Style[]
}

const defaultStyles: Style[] = [
  { name: 'Классика', description: 'Симметрия, колонны, лепнина' },
  { name: 'Скандинавский', description: 'Светлые фасады, дерево, уют' },
  { name: 'Минимализм', description: 'Чистые линии, плоские крыши, панорамные окна' },
  { name: 'Барнхаус', description: 'Амбарный стиль, металл, высокие потолки' },
  { name: 'A-Frame', description: 'Треугольная форма, крыша до земли' },
  { name: 'Фахверк', description: 'Немецкий стиль, каркас, традиции' },
  { name: 'Шале', description: 'Альпийский стиль, дерево, камень' },
  { name: 'Хай-тек', description: 'Стекло, металл, технологичность' },
  { name: 'Русский/Изба', description: 'Традиционный сруб, резные наличники' },
  { name: 'Прованс', description: 'Французская деревня, пастельные тона' }
]

const { styles = defaultStyles } = Astro.props

const defaultColors = [
  'from-amber-500 to-orange-600',
  'from-blue-400 to-blue-600',
  'from-gray-600 to-gray-800',
  'from-amber-600 to-amber-800',
  'from-teal-500 to-teal-700',
  'from-stone-500 to-stone-700',
  'from-green-500 to-emerald-700',
  'from-sky-400 to-cyan-600',
  'from-red-600 to-red-800',
  'from-purple-400 to-purple-600',
]
---

<section class="py-20 lg:py-28 bg-gray-50">
  <div class="container mx-auto px-4">
    <!-- Header -->
    <div class="text-center mb-16">
      <span class="inline-block px-4 py-2 bg-[#0A4C76]/10 text-[#0A4C76] font-medium rounded-full text-sm mb-4">
        Архитектурные стили
      </span>
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-4">
        10 стилей на любой вкус
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Выберите архитектурный стиль, и НейроПлан сгенерирует варианты планировок именно в нём
      </p>
    </div>

    <!-- Styles Grid -->
    <div class="max-w-6xl mx-auto">
      <div class="grid grid-cols-2 md:grid-cols-5 gap-4 lg:gap-6">
        {styles.map((style, index) => (
          <div class="group relative overflow-hidden rounded-2xl aspect-[4/3] cursor-pointer">
            {/* Background gradient */}
            <div class={`absolute inset-0 bg-gradient-to-br ${style.color || defaultColors[index % defaultColors.length]}`}></div>

            {/* Pattern overlay */}
            <div class="absolute inset-0 opacity-20">
              <div class="absolute inset-0 bg-[url('data:image/svg+xml,%3Csvg width=\"20\" height=\"20\" viewBox=\"0 0 20 20\" xmlns=\"http://www.w3.org/2000/svg\"%3E%3Cg fill=\"%23fff\" fill-opacity=\"0.5\" fill-rule=\"evenodd\"%3E%3Ccircle cx=\"3\" cy=\"3\" r=\"1\"/%3E%3Ccircle cx=\"13\" cy=\"13\" r=\"1\"/%3E%3C/g%3E%3C/svg%3E')]"></div>
            </div>

            {/* Content */}
            <div class="absolute inset-0 p-4 lg:p-6 flex flex-col justify-end">
              <div class="transform translate-y-4 group-hover:translate-y-0 transition-transform duration-300">
                <h3 class="text-lg lg:text-xl font-bold text-white mb-1">{style.name}</h3>
                <p class="text-white/80 text-sm opacity-0 group-hover:opacity-100 transition-opacity duration-300 line-clamp-2">
                  {style.description}
                </p>
              </div>
            </div>

            {/* Hover overlay */}
            <div class="absolute inset-0 bg-black/20 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          </div>
        ))}
      </div>

      {/* CTA */}
      <div class="text-center mt-12">
        <a
          href="https://studio.planometrica.pro"
          class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-white bg-gradient-to-r from-[#0A4C76] to-[#1A7BB3] rounded-xl hover:from-[#093d5f] hover:to-[#156999] transition-all duration-200 shadow-lg hover:shadow-xl hover:-translate-y-0.5"
        >
          Выбрать стиль и начать
          <svg class="ml-2 w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6" />
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>
