---
interface Program {
  name: string
  rate: string
  description: string
  features: string[]
  color?: string
  icon?: string
}

interface Props {
  programs: Program[]
}

const { programs } = Astro.props

const defaultColors = [
  { bg: 'bg-blue-50', border: 'border-blue-200', accent: 'text-blue-600' },
  { bg: 'bg-green-50', border: 'border-green-200', accent: 'text-green-600' },
  { bg: 'bg-purple-50', border: 'border-purple-200', accent: 'text-purple-600' },
  { bg: 'bg-amber-50', border: 'border-amber-200', accent: 'text-amber-600' },
]
---

<section class="py-20 lg:py-28 bg-white">
  <div class="container mx-auto px-4">
    <!-- Header -->
    <div class="text-center mb-16">
      <span class="inline-block px-4 py-2 bg-[#92CF93]/20 text-[#0A4C76] font-medium rounded-full text-sm mb-4">
        Ипотечные программы
      </span>
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-4">
        Выберите подходящую программу
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Подайте заявку сразу в несколько банков и выберите лучшие условия
      </p>
    </div>

    <!-- Programs Grid -->
    <div class="max-w-5xl mx-auto">
      <div class="grid md:grid-cols-2 gap-6">
        {programs.map((program, index) => {
          const colors = defaultColors[index % defaultColors.length];
          return (
            <div class={`rounded-2xl p-6 lg:p-8 ${colors.bg} border-2 ${colors.border} hover:shadow-lg transition-shadow duration-300`}>
              {/* Header */}
              <div class="flex items-start justify-between mb-4">
                <div>
                  <h3 class="text-xl font-bold text-gray-900 mb-1">{program.name}</h3>
                  <p class="text-gray-600 text-sm">{program.description}</p>
                </div>
                <span class={`text-2xl lg:text-3xl font-bold ${colors.accent}`}>
                  {program.rate}
                </span>
              </div>

              {/* Features */}
              <ul class="space-y-2">
                {program.features.map((feature) => (
                  <li class="flex items-start gap-2 text-sm text-gray-700">
                    <svg class={`w-5 h-5 flex-shrink-0 ${colors.accent}`} fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                    </svg>
                    {feature}
                  </li>
                ))}
              </ul>
            </div>
          )
        })}
      </div>
    </div>
  </div>
</section>
