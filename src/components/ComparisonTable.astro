---
interface ComparisonItem {
  feature: string
  ours: string | boolean
  theirs: string | boolean
}

interface Props {
  title?: string
  ourLabel?: string
  theirLabel?: string
  items: ComparisonItem[]
}

const {
  title = 'Сравнение подходов',
  ourLabel = 'Планометрика',
  theirLabel = 'Традиционный подход',
  items
} = Astro.props

function renderValue(value: string | boolean) {
  if (typeof value === 'boolean') {
    return value
      ? `<svg class="w-6 h-6 text-[#92CF93]" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" /></svg>`
      : `<svg class="w-6 h-6 text-gray-300" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" /></svg>`;
  }
  return value;
}
---

<section class="py-20 lg:py-28 bg-white">
  <div class="container mx-auto px-4">
    <!-- Header -->
    <div class="text-center mb-16">
      <span class="inline-block px-4 py-2 bg-[#92CF93]/20 text-[#0A4C76] font-medium rounded-full text-sm mb-4">
        Сравнение
      </span>
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900">
        {title}
      </h2>
    </div>

    <!-- Comparison Table -->
    <div class="max-w-4xl mx-auto">
      <div class="overflow-hidden rounded-2xl border border-gray-200 shadow-lg">
        {/* Header */}
        <div class="grid grid-cols-3 bg-gradient-to-r from-[#0A4C76] to-[#1A7BB3] text-white">
          <div class="p-4 lg:p-6 font-semibold border-r border-white/20">
            Характеристика
          </div>
          <div class="p-4 lg:p-6 font-semibold text-center border-r border-white/20 bg-[#92CF93]/20">
            {ourLabel}
          </div>
          <div class="p-4 lg:p-6 font-semibold text-center">
            {theirLabel}
          </div>
        </div>

        {/* Rows */}
        {items.map((item, index) => (
          <div class={`grid grid-cols-3 ${index % 2 === 0 ? 'bg-white' : 'bg-gray-50'}`}>
            <div class="p-4 lg:p-6 border-r border-gray-100 font-medium text-gray-900">
              {item.feature}
            </div>
            <div class="p-4 lg:p-6 border-r border-gray-100 text-center flex items-center justify-center">
              {typeof item.ours === 'boolean' ? (
                item.ours ? (
                  <svg class="w-6 h-6 text-[#92CF93]" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                  </svg>
                ) : (
                  <svg class="w-6 h-6 text-gray-300" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                  </svg>
                )
              ) : (
                <span class="text-[#0A4C76] font-semibold">{item.ours}</span>
              )}
            </div>
            <div class="p-4 lg:p-6 text-center flex items-center justify-center">
              {typeof item.theirs === 'boolean' ? (
                item.theirs ? (
                  <svg class="w-6 h-6 text-[#92CF93]" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                  </svg>
                ) : (
                  <svg class="w-6 h-6 text-gray-300" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                  </svg>
                )
              ) : (
                <span class="text-gray-600">{item.theirs}</span>
              )}
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
