---
interface Partner {
  name: string
  logo?: string
}

interface Props {
  title?: string
  partners: Partner[]
}

const {
  title = 'Нам доверяют',
  partners
} = Astro.props
---

<section class="py-12 lg:py-16 bg-gray-50 border-y border-gray-100">
  <div class="container mx-auto px-4">
    {/* Title */}
    {title && (
      <p class="text-center text-sm font-medium text-gray-500 uppercase tracking-wider mb-8">
        {title}
      </p>
    )}

    {/* Logos */}
    <div class="flex flex-wrap items-center justify-center gap-8 lg:gap-12">
      {partners.map((partner) => (
        <div class="flex items-center justify-center h-12 px-4 grayscale hover:grayscale-0 opacity-60 hover:opacity-100 transition-all duration-300">
          {partner.logo ? (
            <img src={partner.logo} alt={partner.name} class="h-full w-auto object-contain" />
          ) : (
            <span class="text-xl font-bold text-gray-700">{partner.name}</span>
          )}
        </div>
      ))}
    </div>
  </div>
</section>
