---
// Products section
const products = [
  {
    name: 'PlanoCAD',
    description: 'Профессиональный CAD-редактор для создания планировок. Интуитивный интерфейс, умные инструменты, интеграция с AI.',
    url: 'https://planocad.ru',
    features: ['Редактор планировок', 'Библиотека элементов', 'Экспорт в DXF/PDF', 'AI-помощник'],
    color: 'from-[#0A4C76] to-[#1A7BB3]'
  },
  {
    name: 'Студия',
    description: 'Полнофункциональная студия для проектирования. Создавайте проекты домов от концепции до рабочей документации.',
    url: 'https://studio.planometrica.pro',
    features: ['Полный цикл проектирования', '3D визуализация', 'Генерация документации', 'Командная работа'],
    color: 'from-[#1A7BB3] to-[#92CF93]'
  },
  {
    name: 'Планометрика Sandbox',
    description: 'Экспериментальная площадка для тестирования новых AI-инструментов. Пробуйте функции до их релиза.',
    url: 'https://sandbox.planometrica.pro',
    features: ['Бета-функции', 'AI эксперименты', 'Ранний доступ', 'Обратная связь'],
    color: 'from-[#92CF93] to-[#6BB86D]'
  }
]
---

<section id="products" class="py-24 bg-white">
  <div class="container mx-auto px-4">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <span class="inline-block px-4 py-2 bg-[#92CF93]/20 text-[#1A7BB3] font-medium rounded-full text-sm mb-4">
        Наши продукты
      </span>
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-4">
        Экосистема Планометрики
      </h2>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        Набор инструментов для любых задач проектирования — от быстрых скетчей до полной проектной документации
      </p>
    </div>

    <!-- Products Grid -->
    <div class="grid lg:grid-cols-3 gap-8">
      {products.map((product) => (
        <div class="relative group">
          <div class={`absolute inset-0 bg-gradient-to-br ${product.color} rounded-3xl opacity-0 group-hover:opacity-100 transition-opacity duration-300 blur-xl`}></div>
          <div class="relative bg-white rounded-2xl p-8 shadow-sm hover:shadow-xl transition-all duration-300 border border-gray-100 h-full flex flex-col">
            <!-- Product Header -->
            <div class={`w-16 h-16 rounded-2xl bg-gradient-to-br ${product.color} flex items-center justify-center mb-6`}>
              <svg class="w-8 h-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12l8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25" />
              </svg>
            </div>

            <h3 class="text-2xl font-bold text-gray-900 mb-3">
              {product.name}
            </h3>

            <p class="text-gray-600 mb-6 flex-grow">
              {product.description}
            </p>

            <!-- Features List -->
            <ul class="space-y-2 mb-8">
              {product.features.map((feature) => (
                <li class="flex items-center gap-2 text-sm text-gray-600">
                  <svg class="w-4 h-4 text-[#92CF93] flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                  </svg>
                  {feature}
                </li>
              ))}
            </ul>

            <!-- CTA Button -->
            <a
              href={product.url}
              class={`inline-flex items-center justify-center w-full px-6 py-3 text-white font-semibold rounded-xl bg-gradient-to-r ${product.color} hover:opacity-90 transition-opacity`}
            >
              Открыть
              <svg class="ml-2 w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25" />
              </svg>
            </a>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
