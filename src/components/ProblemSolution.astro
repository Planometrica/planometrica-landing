const { problems = defaultProblems, solutions = defaultSolutions } = Astro.props
---

<section class="py-20 lg:py-28 bg-gradient-to-b from-gray-50 to-white">
  <div class="container mx-auto px-4">
    <!-- Header -->
    <div class="text-center mb-16">
      <span class="inline-block px-4 py-2 bg-[#0A4C76]/10 text-[#0A4C76] font-medium rounded-full text-sm mb-4">
        Проблема и решение
      </span>
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-4">
        Проектирование дома —<br class="hidden md:block" />
        <span class="text-[#1A7BB3]">больше не проблема</span>
      </h2>
    </div>

    <!-- Comparison Grid -->
    <div class="max-w-6xl mx-auto">
      <!-- Problems Row -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4 md:gap-6 mb-8">
        {problems.map((item) => (
          <div class="bg-gray-100 rounded-2xl p-6 text-center hover:bg-gray-50 transition-colors">
            <div class="w-12 h-12 bg-gray-200 rounded-xl flex items-center justify-center text-gray-500 mb-3 mx-auto">
              <Fragment set:html={item.icon} />
            </div>
            <h3 class="font-semibold text-gray-900 mb-1">{item.title}</h3>
            <p class="text-sm text-gray-600">{item.description}</p>
          </div>
        ))}
      </div>

      <!-- VS Divider -->
      <div class="flex items-center justify-center py-6">
        <div class="w-full h-px bg-gray-200"></div>
        <span class="px-6 text-2xl font-bold text-[#0A4C76] whitespace-nowrap">VS</span>
        <div class="w-full h-px bg-gray-200"></div>
      </div>

      <!-- Solutions Row -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4 md:gap-6 mb-12">
        {solutions.map((item) => (
          <div class="bg-gradient-to-br from-[#0A4C76] to-[#1A7BB3] rounded-2xl p-6 text-center text-white shadow-lg hover:shadow-xl transition-shadow">
            <div class="w-12 h-12 bg-white/20 rounded-xl flex items-center justify-center text-white mb-3 mx-auto">
              <Fragment set:html={item.icon} />
            </div>
            <h3 class="font-semibold mb-1">{item.title}</h3>
            <p class="text-sm text-white/80">{item.description}</p>
          </div>
        ))}
      </div>

      <!-- CTA -->
      <div class="text-center">
        <a
          href="https://studio.planometrica.ru"
          class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-[#0A4C76] bg-[#92CF93] rounded-xl hover:bg-[#7BC17C] transition-all duration-200 shadow-lg hover:shadow-xl hover:-translate-y-0.5"
        >
          Попробовать бесплатно
          <svg class="ml-2 w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6" />
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>
