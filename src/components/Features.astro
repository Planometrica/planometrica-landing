---
import type { Feature as SanityFeature } from '../lib/sanity'

interface LocalFeature {
  icon: string
  title: string
  description: string
}

interface Props {
  features?: SanityFeature[] | LocalFeature[] | null
  badge?: string
  title?: string
  subtitle?: string
}

